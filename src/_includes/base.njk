<!DOCTYPE html>
<html class="no-js" lang="en">
<head>

    <!--- basic page needs
    ================================================== -->
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="description" content="A personal website that contains every thing Mike Teddy Omondi is enthusiastic about">
    <meta name="author" content="Mike Teddy Omondi">

   <!-- mobile specific metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/vendor.css">
    <link rel="stylesheet" href="/css/highlight-11.8.0-default.min.css">

    <!-- script
    ================================================== -->
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CNLJFQQJVJ"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-CNLJFQQJVJ');
    </script>
    <script src="/js/modernizr.js" defer></script>

    <!-- favicons
    ================================================== -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon-16x16.png">
    <link rel="manifest" href="site.webmanifest">

    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon" />
    <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

</head>

<body id="top">


    <!-- preloader
    ================================================== -->
    <div id="preloader">
        <div id="loader"></div>
    </div>


    <!-- header
    ================================================== -->
    {% include 'header.njk' %}


    <!-- masonry
    ================================================== -->
    <main>
        {{ content | safe }}
    </main>


    <!-- footer
    ================================================== -->
    {% include 'footer.njk' %}


   <!-- JavaScript
   ================================================== -->
    <script>
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => {
            if (!user) {
                window.netlifyIdentity.on("login", () => {
                document.location.href = "/admin/";
                });
            }
            });
        }
    </script>
    <script src="https://unpkg.com/imagesloaded@5/imagesloaded.pkgd.min.js"></script>
    <script src="/js/highlight-11.8.0.min.js"></script>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/plugins.js"></script>
    <script src="/js/main.js"></script>

    <script>hljs.highlightAll();</script>

</body>

</html>